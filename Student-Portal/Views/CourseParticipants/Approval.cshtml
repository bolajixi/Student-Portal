@model IEnumerable<Student_Portal.Models.ApprovalViewModel>
@{
    ViewBag.Title = "Approval";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (Model.Count() == 0)
    {
        <p>There are currently no approval requests. Please check back later</p>
    }
    else
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table class="table">
                        <tr>
                            <th>
                                Select students to approve for this course
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" id="approve" name="unapprovedStudents" value="@item.StudentID" @Html.Raw(item.Approved ? "checked=\"checked\"" : "") />
                                    <label for="approve">@item.StudentName</label>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}